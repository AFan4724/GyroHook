<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.GyroHook.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_main"
            app:title="@string/app_name" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.GyroHook.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <LinearLayout
                        style="@style/GyroHookCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GyroHookSectionHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_wifi"
                            android:text="@string/socket_server_settings" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.GyroHook.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPort"
                                style="@style/Widget.GyroHook.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/server_port_hint"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchSocket"
                            style="@style/Widget.GyroHook.Switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_md"
                            android:text="@string/start_socket_server" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.GyroHook.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <LinearLayout
                        style="@style/GyroHookCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GyroHookSectionHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_rotate_right"
                            android:text="@string/x_axis_title" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.GyroHook.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRotationX"
                                style="@style/Widget.GyroHook.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/x_axis_hint"
                                android:inputType="numberDecimal|numberSigned" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.GyroHook.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <LinearLayout
                        style="@style/GyroHookCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GyroHookSectionHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_rotate_left"
                            android:text="@string/y_axis_title" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.GyroHook.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRotationY"
                                style="@style/Widget.GyroHook.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/y_axis_hint"
                                android:inputType="numberDecimal|numberSigned" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.GyroHook.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <LinearLayout
                        style="@style/GyroHookCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GyroHookSectionHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_360"
                            android:text="@string/z_axis_title" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.GyroHook.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRotationZ"
                                style="@style/Widget.GyroHook.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/z_axis_hint"
                                android:inputType="numberDecimal|numberSigned" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApply"
                    style="@style/Widget.GyroHook.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/apply_settings"
                    app:icon="@drawable/ic_rotate_right" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
